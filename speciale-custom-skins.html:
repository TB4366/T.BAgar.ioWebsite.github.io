<body>

  <h1>Enter Access Key for Special Custom Skins</h1>

  <form id="keyForm">
    <input type="text" id="keyInput" placeholder="Enter your access key" required />
    <button type="submit">Submit</button>
  </form>

  <div class="message" id="message"></div>

  <script>
    const form = document.getElementById('keyForm');
    const input = document.getElementById('keyInput');
    const message = document.getElementById('message');

    // Keys gekoppeld aan skin pagina's
    const keyMap = {
      "skin123": "custom-skin-123.html",
      "skin456": "custom-skin-456.html",
      "specialkey": "special-skin.html"
    };

    form.addEventListener('submit', function(event) {
      event.preventDefault();
      const key = input.value.trim();
      if(!key) {
        message.textContent = "Please enter an access key.";
        return;
      }
      const destination = keyMap[key.toLowerCase()];
      if(destination) {
        // Key is correct, redirect naar de juiste pagina
        window.location.href = destination;
      } else {
        // Key is fout
        message.textContent = "Invalid key. Please try again.";
      }
    });
  </script>

</body>
</html>
