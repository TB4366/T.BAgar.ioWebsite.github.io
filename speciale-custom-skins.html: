<h1>Special Custom Skins</h1>
<div class="circles-container">
  <div class="circle" id="circle1">
    <label class="upload-btn" for="upload1">Upload</label>
    <input type="file" id="upload1" accept="image/*" />
    <div class="img-link" id="link1"></div>
  </div>
  <div class="circle" id="circle2">
    <label class="upload-btn" for="upload2">Upload</label>
    <input type="file" id="upload2" accept="image/*" />
    <div class="img-link" id="link2"></div>
  </div>
  <div class="circle" id="circle3">
    <label class="upload-btn" for="upload3">Upload</label>
    <input type="file" id="upload3" accept="image/*" />
    <div class="img-link" id="link3"></div>
  </div>
</div>

<script>
  const CLIENT_ID = "YOUR_IMGUR_CLIENT_ID"; // Vervang met jouw Imgur Client-ID

  function uploadImage(file, circleId, linkId) {
    if (!file) return;

    const formData = new FormData();
    formData.append("image", file);

    fetch("https://api.imgur.com/3/image", {
      method: "POST",
      headers: {
        Authorization: `Client-ID ${CLIENT_ID}`
      },
      body: formData
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        const imageUrl = data.data.link;
        document.getElementById(circleId).innerHTML = `
          <img src="${imageUrl}" alt="Uploaded Skin" />
          <button class="upload-btn" onclick="document.getElementById('upload${circleId.slice(-1)}').click()">Change</button>
          <div class="img-link" id="${linkId}"><a href="${imageUrl}" target="_blank" style="color:#bbb; text-decoration:none;">${imageUrl}</a></div>
        `;
      } else {
        alert("Upload failed, probeer opnieuw.");
      }
    })
    .catch(() => alert("Upload mislukt, controleer je internetverbinding."));
  }

  // Event listeners voor upload inputs
  document.getElementById("upload1").addEventListener("change", e => {
    uploadImage(e.target.files[0], "circle1", "link1");
  });

  document.getElementById("upload2").addEventListener("change", e => {
    uploadImage(e.target.files[0], "circle2", "link2");
  });

  document.getElementById("upload3").addEventListener("change", e => {
    uploadImage(e.target.files[0], "circle3", "link3");
  });
</script>

